<UserControl x:Class="JustAProgrammer.TeamPilgrim.VisualStudio.TeamPilgrimControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Common="clr-namespace:JustAProgrammer.TeamPilgrim.VisualStudio.Common"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MyToolWindow">
    <Grid>
        <StackPanel Orientation="Vertical" Common:ActivateModel.Model="{Binding}">
            <TreeView DataContext="{Binding Path=Collections}">
                <TreeViewItem Header="{Binding Path=ProjectCollection.Name}">
                    <TreeViewItem Header="Work Items">
                        <TreeViewItem Header="My Queries"/>
                        <TreeViewItem Header="Team Queries"/>
                    </TreeViewItem>
                    <TreeViewItem Header="Reports"/>
                    <TreeViewItem Header="Builds"/>
                    <TreeViewItem Header="Team Members"/>
                    <TreeViewItem Header="Source Control"/>
                </TreeViewItem>
            </TreeView>
        </StackPanel>
    </Grid>
</UserControl>
